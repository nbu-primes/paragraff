@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">
    <div class="quick-actions_homepage">
        <ul class="quick-actions">
            <li class="bg_lg span3">
                @Ajax.RawActionLink(string.Format("<i class='icon-pencil'></i>Categories"), "EditCategories", "Category", new { area = "Admin" },
               new AjaxOptions
               {
                   HttpMethod = "Get",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "admin-container",
                   LoadingElementId = "progress-div"
               },
               new { @class = "" })
            </li>
            <li class="bg_lb">
                @Ajax.RawActionLink(string.Format("<i class='icon-user'></i>Users"), "AllUsers", "Admin", new { area = "Admin" },
               new AjaxOptions
               {
                   HttpMethod = "Get",
                   InsertionMode = InsertionMode.Replace,
                   UpdateTargetId = "admin-container",
                   LoadingElementId = "progress-div"
               },
               new { @class = "" })
            </li>
            <li class="bg_lo"> <a href="tables.html"> <i class="icon-th"></i> Tables</a> </li>
            <li class="bg_ls"> <a href="grid.html"> <i class="icon-fullscreen"></i> Full width</a> </li>
            <li class="bg_lo span3"> <a href="form-common.html"> <i class="icon-th-list"></i> Forms</a> </li>
            <li class="bg_ls"> <a href="buttons.html"> <i class="icon-tint"></i> Buttons</a> </li>
            <li class="bg_lb"> <a href="interface.html"> <i class="icon-pencil"></i>Elements</a> </li>
            <li class="bg_lg"> <a href="calendar.html"> <i class="icon-calendar"></i> Calendar</a> </li>
            <li class="bg_lr"> <a href="error404.html"> <i class="icon-info-sign"></i> Error</a> </li>

        </ul>
    </div>
    <!--End-Action boxes-->
</div>

<div id="progress-div">
    <div class="center">
        <img src="~/Content/Animations/loading.gif" alt="" />
    </div>
</div>

<div id="admin-container"></div>

@section scripts{
    @Scripts.Render("~/bundles/matrix-tables")    
    <script>
        $("ul.quick-actions a").on("click", function () {
            console.log("clicked");
            $("#admin-container").html("");
        })
    </script>
}